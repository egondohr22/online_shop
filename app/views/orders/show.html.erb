<div class="row mb-4">
  <div class="card mb-4 mb-md-0">
    <div class="card-body">
      <div class="row">
        <div class="col-md-11">
          <h5>Order #<%= @order.id %></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">User</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= @order.user.email %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">Product</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= @order.product.name %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">Quantity</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= @order.quantity %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">Tracking Number</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= @order.tracking_number %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">Status</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= @order.status %></p>
        </div>
      </div>
    </div>
  </div>
</div>