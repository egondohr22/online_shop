<%= form_for(@product) do |f| %>
  <div class="form-floating mb-2">
    <%= f.text_field :name, autofocus: true, required: true, for:"name", class: "form-control", placeholder: "Product Name"%>
    <label class="form-label" for="name">Product Name</label>
  </div>
  <div class="form-floating mb-2">
    <%= f.text_area :description, required: true, class: "form-control", placeholder: "Description", for:"description"%>
    <label class="form-label" for="description">Description</label>
  </div>
  <div class="form-floating mb-2">
    <%= f.text_field :sku, required: true, class: "form-control", placeholder: "SKU", for:"sku"%>
    <label class="form-label" for="sku">SKU</label>
  </div>
  <div class="form-floating mb-2">
    <%= f.number_field :stock, min: 0, required: true, class: "form-control", placeholder: "Stock", for:"stock"%>
    <label class="form-label" for="stock">Stock</label>
  </div>
  <div class="form-floating mb-2">
    <%= f.number_field :price, min: 0, step: 0.01, required: true, class: "form-control", placeholder: "Price", for:"price"%>
    <label class="form-label" for="price">Price</label>
  </div>
  <div class="form-floating mb-2">
    <%= f.collection_select(:category_id, Category.all, :id, :name, {:include_blank => "Select..."} , {:required => true, :class => "form-select"}) %>
    <label class="form-label">Category</label>
  </div>
  <div class="form-floating mb-2">
     <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit button_text, class: "btn btn-primary btn-block mb-2" %>
  </div>
<% end %>